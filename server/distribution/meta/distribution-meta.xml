<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>registry-meta</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>dir</format>
        <format>tgz</format>
    </formats>
    <fileSets>
        <fileSet>
            <includes>
                <include>conf/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <includes>
                <include>bin/*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../../server/meta/target/registry-server-meta-executable.jar</source>
            <outputDirectory>./</outputDirectory>
            <destName>registry-meta.jar</destName>
        </file>
        <file>
            <source>../../server/meta/src/main/resources/log4j2.xml</source>
            <outputDirectory>./conf</outputDirectory>
            <destName>log4j2.xml</destName>
        </file>
        <file>
            <source>../version</source>
            <outputDirectory>./</outputDirectory>
            <destName>version_${project.version}</destName>
        </file>
        <file>
            <source>../../store/jdbc/src/main/resources/mapper/app_revision.xml</source>
            <outputDirectory>./conf</outputDirectory>
            <destName>app_revision.xml</destName>
        </file>
        <file>
            <source>../../store/jdbc/src/main/resources/mapper/interface_apps_index.xml</source>
            <outputDirectory>./conf</outputDirectory>
            <destName>interface_apps_index.xml</destName>
        </file>
    </files>

    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.alipay.sofa:registry-server-meta</include>
            </includes>
        </moduleSet>
    </moduleSets>
</assembly>