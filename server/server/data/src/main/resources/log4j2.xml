<?xml version="1.0" encoding="UTF-8"?>
<configuration status="info" shutdownHook="disable" monitorInterval="5">

    <Properties>
        <Property name="DATA_LOG_HOME">${user.home}/logs/registry/data</Property>
        <Property name="LOG_LEVEL">INFO</Property>
    </Properties>

    <appenders>
        <console name="STDOUT-APPENDER" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss:SSS}][%p][%t][%c{1}]%m%n"/>
        </console>

        <RollingRandomAccessFile name="COMMON-ERROR-APPENDER" fileName="${DATA_LOG_HOME}/common-error.log"
                                 filePattern="${DATA_LOG_HOME}/common-error.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{ISO8601}][%p][%t][%c{0}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="30">
                <Delete basePath="${DATA_LOG_HOME}" maxDepth="2">
                    <IfFileName glob="common-error.log.*" />
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="COMMON-DEFAULT-APPENDER" fileName="${DATA_LOG_HOME}/common-default.log"
                                 filePattern="${DATA_LOG_HOME}/common-default.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="ERROR" onMatch="DENY"/>
            <PatternLayout pattern="[%d{ISO8601}][%p][%t][%c{0}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="30">
                <Delete basePath="${DATA_LOG_HOME}" maxDepth="2">
                    <IfFileName glob="common-default.log.*" />
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="JRAFT-APPENDER" fileName="${DATA_LOG_HOME}/registry-raft.log"
                                 filePattern="${DATA_LOG_HOME}/registry-raft.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="[%d{ISO8601}][%p][%t][%c{0}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="30">
                <Delete basePath="${DATA_LOG_HOME}" maxDepth="2">
                    <IfFileName glob="registry-raft.log.*" />
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="DATA-DEFAULT-APPENDER" fileName="${DATA_LOG_HOME}/registry-data.log"
                                 filePattern="${DATA_LOG_HOME}/registry-data.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="[%d{ISO8601}][%p][%t][%c{0}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="3">
                <Delete basePath="${DATA_LOG_HOME}" maxDepth="2">
                    <IfFileName glob="registry-data.log.*" />
                    <IfLastModified age="3d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="DATA-STARTUP-APPENDER" fileName="${DATA_LOG_HOME}/registry-startup.log"
                                 filePattern="${DATA_LOG_HOME}/registry-startup.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="[%d{ISO8601}][%p][%t][%c{0}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="30">
                <Delete basePath="${DATA_LOG_HOME}" maxDepth="2">
                    <IfFileName glob="registry-startup.log.*" />
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="DATA-DATUM-CHANGE-APPENDER" fileName="${DATA_LOG_HOME}/datum-change.log"
                                 filePattern="${DATA_LOG_HOME}/datum-change.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="[%d{ISO8601}][%p][%t][%c{0}] - %m%n"/>
            <ThresholdFilter level="ERROR" onMatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="30">
                <Delete basePath="${DATA_LOG_HOME}" maxDepth="2">
                    <IfFileName glob="datum-change.log.*" />
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="DATA-CACHE-DIGEST-APPENDER" fileName="${DATA_LOG_HOME}/cache-digest.log"
                                 filePattern="${DATA_LOG_HOME}/cache-digest.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="[%d{ISO8601}][%p][%t][%c{0}] - %m%n"/>
            <ThresholdFilter level="ERROR" onMatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="72">
                <Delete basePath="${DATA_LOG_HOME}" maxDepth="2">
                    <IfFileName glob="cache-digest.log.*" />
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="DATA-HTTP-APPENDER" fileName="${DATA_LOG_HOME}/registry-http.log"
                                 filePattern="${DATA_LOG_HOME}/registry-http.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="[%d{ISO8601}][%p][%t][%c{0}] - %m%n"/>
            <ThresholdFilter level="ERROR" onMatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="30">
                <Delete basePath="${DATA_LOG_HOME}" maxDepth="2">
                    <IfFileName glob="registry-http.log.*" />
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="DATA-CONNECT-APPENDER" fileName="${DATA_LOG_HOME}/registry-connect.log"
                                 filePattern="${DATA_LOG_HOME}/registry-connect.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="[%d{ISO8601}][%p][%t][%c{0}] - %m%n"/>
            <ThresholdFilter level="ERROR" onMatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="30">
                <Delete basePath="${DATA_LOG_HOME}" maxDepth="2">
                    <IfFileName glob="registry-connect.log.*" />
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="DATA-EXCHANGE-APPENDER" fileName="${DATA_LOG_HOME}/registry-exchange.log"
                                 filePattern="${DATA_LOG_HOME}/registry-exchange.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="[%d{ISO8601}][%p][%t][%c{0}] - %m%n"/>
            <ThresholdFilter level="ERROR" onMatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="72">
                <Delete basePath="${DATA_LOG_HOME}" maxDepth="2">
                    <IfFileName glob="registry-exchange.log.*" />
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="REGISTRY-METRICS-APPENDER" fileName="${DATA_LOG_HOME}/registry-metrics.log"
                                 filePattern="${DATA_LOG_HOME}/registry-metrics.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="[%d{ISO8601}][%p][%t][%c{0}] - %m%n"/>
            <ThresholdFilter level="ERROR" onMatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="30">
                <Delete basePath="${DATA_LOG_HOME}" maxDepth="2">
                    <IfFileName glob="registry-metrics.log.*" />
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="DATUM-LEASE-APPENDER" fileName="${DATA_LOG_HOME}/registry-datum-lease.log"
                                 filePattern="${DATA_LOG_HOME}/registry-datum-lease.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="[%d{ISO8601}][%p][%t][%c{0}] - %m%n"/>
            <ThresholdFilter level="ERROR" onMatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="30">
                <Delete basePath="${DATA_LOG_HOME}" maxDepth="2">
                    <IfFileName glob="registry-datum-lease.log.*" />
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

    </appenders>

    <loggers>

        <!-- root loggers -->
        <root level="${LOG_LEVEL}">
            <appender-ref ref="COMMON-DEFAULT-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </root>

        <!-- common loggers -->
        <logger name="com.alipay.sofa.registry.jraft" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="JRAFT-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

        <logger name="com.alipay.sofa.jraft" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="JRAFT-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

        <!-- data loggers -->

        <logger name="com.alipay.sofa.registry.server.data" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="DATA-DEFAULT-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

        <logger name="com.alipay.sofa.registry.server.data.bootstrap" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="DATA-STARTUP-APPENDER"/>
            <appender-ref ref="STDOUT-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

        <logger name="com.alipay.sofa.registry.server.data.change.DataChangeHandler" level="${LOG_LEVEL}"
                additivity="false">
            <appender-ref ref="DATA-DATUM-CHANGE-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

        <logger name="com.alipay.sofa.registry.server.data.cache.CacheDigestTask" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="DATA-CACHE-DIGEST-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

        <logger name="com.alipay.sofa.registry.server.data.resource" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="DATA-HTTP-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

        <logger name="DATA-START-LOGS" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="DATA-STARTUP-APPENDER"/>
            <appender-ref ref="STDOUT-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

        <logger name="org.springframework.boot.SpringApplication" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="DATA-STARTUP-APPENDER"/>
            <appender-ref ref="STDOUT-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

        <logger name="com.alipay.sofa.registry.server.data.DataApplication" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="DATA-STARTUP-APPENDER"/>
            <appender-ref ref="STDOUT-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

        <logger name="DATA-CONNECT" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="DATA-CONNECT-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

        <logger name="DATA-EXCHANGE" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="DATA-EXCHANGE-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

        <logger name="REGISTRY-METRICS" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="REGISTRY-METRICS-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

        <logger name="com.alipay.sofa.registry.server.data.renew.DatumLeaseManager" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="DATUM-LEASE-APPENDER"/>
            <appender-ref ref="COMMON-ERROR-APPENDER"/>
        </logger>

    </loggers>

</configuration>